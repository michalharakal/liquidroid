<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="liqui.droid"
    android:versionCode="1"
    android:versionName="2.01" >

    <uses-sdk
        android:targetSdkVersion="10"
        android:minSdkVersion="4" />
    <supports-screens android:anyDensity="true" />
    
    <uses-permission
        android:name="android.permission.INTERNET" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission
        android:name="android.permission.VIBRATE" />
    <uses-permission
        android:name="android.permission.READ_CALENDAR" />
    <uses-permission
        android:name="android.permission.WRITE_CALENDAR" />
    <uses-permission
        android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission
		android:name="android.permission.WAKE_LOCK" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission
        android:name="android.permission.GET_ACCOUNTS" />
	<uses-permission
	    android:name="android.permission.MANAGE_ACCOUNTS" />
	<uses-permission
	    android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
	<uses-permission
	    android:name="android.permission.READ_SYNC_SETTINGS" />
	<uses-permission
	    android:name="android.permission.WRITE_SYNC_SETTINGS" />
	<uses-permission
	    android:name="android.permission.USE_CREDENTIALS" />
    
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/DefaultTheme"
        android:name=".LQFBApplication">
        
        <provider
            android:name=".db.DBProvider"
            android:authorities="liqui.droid.db" >
        </provider>
        
        <provider
            android:name=".db.DBSystemProvider"
            android:authorities="liqui.droid.system" >
        </provider>
        
         <service android:name=".service.AccountAuthenticatorService"
        	     android:exported="true" android:process=":auth">
                 <intent-filter>
                 	<action android:name="android.accounts.AccountAuthenticator" />
                 </intent-filter>
                 <meta-data android:name="android.accounts.AccountAuthenticator"
                            android:resource="@xml/authenticator" />
        </service>
        
         <service android:name=".service.SyncService"
 			android:exported="true" android:process=":sync">
 			<intent-filter>
  				<action android:name="android.content.SyncAdapter" />
 			</intent-filter>
 			<meta-data
 			    android:name="android.content.SyncAdapter"
  				android:resource="@xml/sync_db" />
		</service>
        
        <activity
            android:name=".activity.LiquiDroid">
            <intent-filter>
                <action
                    android:name="android.intent.action.MAIN" />
                <category
                    android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".activity.Accounts"
            android:configChanges="orientation" />
        <activity
            android:name=".activity.AreaListSelect"
            android:configChanges="orientation" />
        <activity
            android:name=".activity.AppPrefs"
            android:theme="@android:style/Theme" />
        <activity
            android:name=".activity.AreaTreeCached"
            android:configChanges="orientation" />
        <activity
            android:name=".activity.CalendarEvents"
            android:configChanges="orientation" />
        <activity
            android:name=".activity.ContactListCached"
            android:configChanges="orientation" />
        <activity
            android:name=".activity.EventListCached"
            android:configChanges="orientation" />
        <activity
            android:name=".activity.Explore"
            android:configChanges="orientation" />
        <activity
            android:name=".activity.Initiative"
            android:configChanges="orientation" />
        <activity
            android:name=".activity.IssueTreeCached"
            android:configChanges="orientation" />
        <activity
            android:name=".activity.LQFBEdit"
            android:configChanges="orientation" />
        <activity
            android:name=".activity.LQFBListCached"
            android:configChanges="orientation" />
        <activity
            android:name=".activity.Search"
            android:configChanges="orientation" />
        <activity
            android:name=".activity.Test"
            android:configChanges="orientation" />
        <activity
            android:name=".activity.MemberActivity"
            android:configChanges="orientation" />
        <activity
            android:name=".activity.MemberDetails"
            android:configChanges="orientation" />
        <activity
            android:name=".activity.MemberEdit"
            android:configChanges="orientation" />
        <activity
            android:name=".activity.MemberListCached"
            android:configChanges="orientation" />
        
    </application>

</manifest>
